page {
  height: 100%;
}

.container {
  height: 100%;
}

.splash {
  height: 100%;
}

.splash swiper-item {
  flex: 1;
}

.splash swiper-item image {
  position: absolute;
  height: 100%;
  width: 100%;
  opacity: .9;
}

.start {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  width: 300rpx;
  margin-left: -150rpx;
  background-color: rgba(237, 237, 237, .6);
  color: #345;
  border: 1rpx solid rgba(237, 237, 237, .8);
  border-radius: 200rpx;
  font-size: 40rpx;
}
